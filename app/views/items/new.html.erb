<%= render "header" %>
<%= form_with model: @item, method: :post, local: true do |form| %>
  <div class="field">
    <%= form.text_field :title %>
    <%= form.file_field :image %>
    <%= form.text_area :item_explanation %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<!--<%= link_to "戻る", root_path, class: "back" %>-->
<% end %>
